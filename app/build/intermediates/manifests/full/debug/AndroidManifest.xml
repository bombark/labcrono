<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.ufpr.labcrono.issue"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.ufpr.labcrono.issue.ActMain"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="org.ufpr.labcrono.issue.ActBegin"
            android:label="@string/title_activity_act_begin"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.ufpr.labcrono.issue.ActEnd"
            android:label="@string/title_activity_act_end"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="org.ufpr.labcrono.issue.ActSettings"
            android:label="@string/title_activity_act_settings"
            android:parentActivityName="org.ufpr.labcrono.issue.ActBegin"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.ufpr.labcrono.issue.ActBegin" />
        </activity>
        <activity
            android:name="org.ufpr.labcrono.issue.ActSetting"
            android:label="@string/title_activity_act_setting"
            android:parentActivityName="org.ufpr.labcrono.issue.ActBegin"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.ufpr.labcrono.issue.ActBegin" />
        </activity>
    </application>

</manifest>